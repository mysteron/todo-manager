{% if isEditing  == false %}
	<div class="card mb-3">
		<div class="card-body">
			<div class="row">
				<div class="col">
					<div class="form-check form-switch">

						<input class="form-check-input" type="checkbox" role="switch" id="doneCheck">
						<label for="doneCheck" class="form-check-label">
							<h5 class="card-title">{{task.title}}</h5>
						</label>

					</div>
				</div>
				<div class="col text-end">
					<a href="/todo-list/{{task.id}}">
						<i class="bi bi-pencil-square clickable mx-1"></a>
					</i>
					<i class="bi bi-trash clickable mx-1"></i>
				</div>
			</div>
			<p class="card-text">{{task.description}}</p>
			<span class="badge bg-success">{{task.category.name}}</span>
		</div>
	</div>
{% else %}
	<div class="card mb-3">
		<form action="/todo-list" method="post">
			<div class="card-body">
				<div class="mb-3">
					<label for="title" class="form-label ">Title</label>
					<input type="text" class="form-control form-control-sm" id="title" value="{{task.title}}" aria-describedby="title-help">
					<div id="title-help" class="form-text">The title of the task</div>
				</div>
				<div class="mb-3">
					<label for="description" class="form-label">Description</label>
					<input type="text" class="form-control form-control-sm" id="description" value="{{task.description}}" aria-describedby="description-help">
					<div id="description-help" class="form-text">A short description of the task</div>
				</div>
				<div class="mb-3">
					<select class="form-select form-select-sm" aria-label="category">
						{% for category in categories %}
							<option value={{task.category.id}} *ngFor="let category of categories">{{category.name}}
							</option>
						{% endfor %}
					</select>
				</div>
				<button type="submit" class="btn btn-primary btn-sm">Save</button>
				<button type="button" class="btn btn-outline-secondary mx-2 btn-sm">Cancel</button>
			</div>
		</form>
	</div>
{% endif %}
