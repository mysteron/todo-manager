{# templates/_category.html.twig #}

<div class="category">
	<div class="card category-card mb-3" data-catid="{{category.id}}">
		<div class="card-body">
			<div class="row">
				<div class="col">
					<h5 class="card-title" id="title">{{category.name}}</h5>
				</div>
				<div class="col text-end">
					<i class="bi bi-pencil-square cat-edit clickable mx-1"></i>
					{% if category.id !=1 %}
						<i class="bi bi-trash clickable mx-1 cat-del"></i>
					{% endif %}
				</div>
			</div>
			<p class="card-text" id="description">{{category.description}}</p>
		</div>
	</div>
</div>

<div class="category_edit">
	<div class="card mb-3 category-card" data-catid="{{category.id}}" style="display:none">
		<div class="card-body">
			<div class="mb-3">
				<label for="title" class="form-label ">Title</label>
				<input type="text" value="{{category.name}}" class="form-control form-control-sm" id="title" aria-describedby="title-help">
				<div id="title-help" class="form-text">The title of the category</div>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<input type="text" value="{{category.description}}" class="form-control form-control-sm" id="description" aria-describedby="description-help">
				<div id="description-help" class="form-text">A short description of the category</div>
			</div>
			<button type="button" class="btn btn-primary btn-sm cat-edit-save">Save</button>
			<button type="button" class="btn btn-outline-secondary mx-2 btn-sm cancel-cat-edit">Cancel</button>
		</div>
	</div>
</div>
